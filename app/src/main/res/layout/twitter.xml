<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffffff">

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentTop="false"
        android:clickable="true"
        android:layout_marginBottom="40dp" />

    <EditText
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextStatus" android:hint="Confess"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toStartOf="@+id/buttonUpdateStatus" />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUpdateStatus"
            android:layout_gravity="right"
            android:adjustViewBounds="true" android:src="@drawable/tweet"
            android:layout_alignParentBottom="true"
        android:background="@android:drawable/ic_menu_send"
        android:height="84dp"
        android:layout_alignTop="@+id/editTextStatus"
        android:layout_alignParentEnd="true" />

</RelativeLayout>